<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="#40C3CFDC"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#4267B2"
        android:orientation="horizontal">
        <TextView
            android:text="Facebook"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="200dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_content_paste_searchww_24"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:background="#7A8289"/>
            <TextView
                android:text="Your Story"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:background="#7A8289"/>
            <TextView
                android:text="Your Story"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="#7A8289"/>
        <TextView
            android:text="What's on your mind?"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="#7A8289"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="User Name"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="5 mins ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>




        </LinearLayout>
        <TextView
            android:text="This is a sample post content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="150dp"
            android:background="#7A8289"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Like"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="#4267B2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Comment"
                android:textSize="20dp"
                android:textColor="#4267B2"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Share"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="#4267B2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#ffffff">

    </LinearLayout>





</LinearLayout>